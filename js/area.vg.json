{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 800,
  "background": "white",
  "view": {"stroke": null},
  "title": {
  "text": "Country Area (km²)",
  "fontSize": 24,
  "font": "Arial",
  "fontWeight": "bold",
  "color": "black",
  "anchor": "middle",
  "offset": -55
  },
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "minArea",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2000000,
        "step": 10000,
        "name": "Minimum Area (km²)"
      }
  }
],
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "fill": "#cce6ff",
        "stroke": null
      }
    },
    {
        "data": {
          "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {"calculate":"0","as":"No. Concerts"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "black"},
        "encoding": {
          "tooltip":[
            {"field":"properties.NAME","type":"nominal","title":"Country"}
          ]
        }
      },
    {
      "data":{
    "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/data/countrySize.csv",
    "format": {"type": "csv"}
    },
      "transform": [
        {"filter": "datum.area >= minArea"},
    
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
              "format":{"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as":"geo"
        }
        
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "shape":{"field":"geo","type":"geojson"},
        "color": {
          "field": "area",
          "type": "quantitative",
          "scale": {
          "type": "threshold",
          "domain": [100000,200000,500000,1000000,2000000,5000000,10000000],
          
          "range": ["#fde0dd", "#fa9fb5", "#c51b8a", "#9b017d", "#7a0177", "#49006a", "#250045", "#000000"]

          
        },
        "legend":{
          "title":"Area (km²)",
          "orient":"top-right",
          "offset":35,
          "labelFont": "Arial",
          "labelFontSize": 12,
          "titleFont": "Arial",
          "titleFontSize": 14
        }
        },
        
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "area", "type": "quantitative","title":"Area (km²)"}
        ]
      }
    }
  ]
}
