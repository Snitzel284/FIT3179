{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 800,
  "background": "white",
  "view": {"stroke": null},
  "title": {
  "text": "Number of Elton John Concerts by Country",
  "fontSize": 24,
  "font": "Arial",
  "fontWeight": "bold",
  "color": "black",
  "anchor": "middle",
  "offset": -55
  },
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "From",
      "value": 1970,
      "bind": {
        "input": "range",
        "min": 1970,
        "max": 2024,
        "step": 1
      }
  },
      {
      "name": "To",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1970,
        "max": 2024,
        "step": 1
      }
  }
],
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "fill": "#cce6ff",
        "stroke": null
      }
    },
    {
        "data": {
          "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {"calculate":"0","as":"No. Concerts"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "black"},
        "encoding": {
          "tooltip":[
            {"field":"properties.NAME","type":"nominal","title":"Country"},
            {"field":"No. Concerts","type":"quantitative"}
          ]
        }
      },
    {
      "data":{
    "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/data/Concerts.csv",
    "format": {"type": "csv"}
    },
      "transform": [
        {"filter": "datum.Year >= From && datum.Year <= To"},
        {"aggregate": [{"op":"count","as":"Concerts"}],"groupby":["Country"]},
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
              "format":{"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as":"geo"
        },
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "../data/countrySize.csv",
              "format":{"type": "csv"}
            },
            "key": "country",
            "fields":["area"]
          },
          "as":"area"
        },
        {"calculate": "datum.area/100000","as":"area"},
        {"calculate": "datum.Concerts/datum.area","as":"Concerts"}


      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "shape":{"field":"geo","type":"geojson"},
        "color": {
          "field": "Concerts",
          "type": "quantitative",
          "scale": {
          "type": "threshold",
          "domain": [0.1,0.5,1,3,10,20,50],
          "range": ["#fde0dd", "#fa9fb5", "#c51b8a", "#7a0177", "#49006a", "#250045","#000000"]
          
        },
        "legend":{
          "title":"Percentage",
          "orient": "top-right",
          "offset":35,
          "labelFont": "Arial",
          "labelFontSize": 12,
          "titleFont": "Arial",
          "titleFontSize": 14
        }
        },
        
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
         {"field": "area", "type": "quantitative","title":"Area (kmÂ²)"},
          {"field": "Concerts", "type": "quantitative","title":"No. Concerts"}
        ]
      }
    }
  ]
}
