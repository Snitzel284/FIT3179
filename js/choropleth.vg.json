{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 800,
    "background": "white",
    "view": {"stroke": null},
    "title": {
    "text": "Number of Elton John Concerts by Country (1970-2024)",
    "fontSize": 24,
    "font": "Arial",
    "fontWeight": "bold",
    "color": "black",
    "anchor": "middle",
    "offset": -55
    },
  "data": {
    "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "datasets": {
    "concerts": {
        "url":"https://raw.githubusercontent.com/Snitzel284/FIT3179/main/data/Final.csv",
        "transform":[
        {
          "aggregate": [{"op": "count", "as": "Count"}],
          "groupby": ["Country"]
        }
        ]
    }
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "name": "concerts"
            },
            "key": "Country",
            "fields": ["Count"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Count",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 10, 100],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Count", "type": "quantitative"},
          {"field" : "City" , "type" : "nominal" }
        ]
      }
    }
  ],
  "config": {}
}