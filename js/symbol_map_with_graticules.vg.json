{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 800,
    "background": "white",
    "view": {"stroke": null},
    "title": {
    "text": "Number of Elton John Concerts by Country (1970-2024)",
    "fontSize": 24,
    "font": "Arial",
    "fontWeight": "bold",
    "color": "black",
    "anchor": "middle",
    "offset": -55

  },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
      "data": {
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "fill": "#cce6ff",
        "stroke": null
      }
    },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "#f7dbab", "stroke": "black"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/js/worldMap.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Snitzel284/FIT3179/main/data/Final.csv"
        },
        "mark": {"type": "circle", "color": "hotpink", "opacity": 0.6, "stroke": "black", "strokeWidth": 0.5},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Number of Concerts",
            "scale": {"range": [0, 1500]},
            "legend":{
              "values": [10,100,500,1000,2000],
              "labelFont": "Arial",
              "labelFontSize": 12,
              "titleFont": "Arial",
              "titleFontSize": 14,
              "orient": "none",
              "legendX": 1100,
              "legendY": 35
            }
            
          },
          "tooltip": [{
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "aggregate": "count",
            "type": "quantitative",
            "title": "No. Concerts"
          }
        ]
        }
      }
    ]
  }